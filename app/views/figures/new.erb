<h2>Create New Figure</h2>

<form action="/figures" method="post">
  Name <input type="text" name="figure[name]" id="figure_name"><br>

  <h3>Titles</h3>

  <% Title.all.each do |title| %>
    <input type="checkbox" name="titles[]" value="<%=title.id%>" id="<%=title.name%>"><%=title.name%><br>
  <% end %>

  <h2>Create New Title</h2>
  <input type="text" name="title">

  <h3>Landmarks</h3>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="landmarks[]" value="<%=landmark.id%>" id="<%=landmark.name%>"><%=landmark.name%><br>
  <% end %>

  <h2>Create New Landmark:</h2>
  Name:<input type="text" name="landmark[name]">
  Year:<input type="text" name="landmark[year_completed]">
  <input type="submit" value="Create New Figure">
</form><br><br>

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
