<h2>Create New Landmark</h2>

<form action="/landmarks" method="post">
  Name <input type="text" name="name"><br>

  <h3>Titles</h3>

  <% Title.all.each do |title| %>
    <input type="checkbox" name="titles[]" value="<%=title.id%>" id="<%=title.name%>"><%=title.name%><br>
  <% end %>

  <h2>Create New Title</h2>
  <input type="text" name="title">

  <h3>Figures</h3>

  <% Figure.all.each do |figure| %>
    <input type="checkbox" name="figures[]" value="<%=figure.id%>" id="<%=figure.name%>"><%=figure.name%><br>
  <% end %>

  <h2>Create New Figure:</h2>
  Name:<input type="text" name="figure">

  <input type="submit" value="Create New Landmark">
</form>

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
