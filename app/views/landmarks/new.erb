<h2>Create New Landmark</h2>

<form action="/landmarks" method="post">
  Name <input type="text" name="name"><br>

  <h3>Titles</h3>

  <% Title.all.each do |title| %>
    <input type="checkbox" name="titles[]" value="<%=title.id%>" id="<%=title.name%>"><%=title.name%><br>
  <% end %>

  <h2>Create New Title</h2>
  <input type="text" name="title">

  <h3>Landmarks</h3>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="landmarks[]" value="<%=landmark.id%>" id="<%=landmark.name%>"><%=landmark.name%><br>
  <% end %>

  <input type="submit">
</form>

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
